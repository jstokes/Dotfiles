#SLI stuff
SLI_WORKSPACE="~/Documents/workspace/SLI/sli"
DASHBOARD_POM="$SLI_WORKSPACE/dashboard/pom.xml"
API_POM="$SLI_WORKSPACE/api/pom.xml"
SCAFFOLD_POM="$SLI_WORKSPACE/scaffold/pom.xml"
COMMON_POM="$SLI_WORKSPACE/common/pom.xml"
DOMAIN_POM="$SLI_WORKSPACE/common/domain/pom.xml"
DAL_POM="$SLI_WORKSPACE/data-access/pom.xml"

alias build_dashboard="mvn clean install -f $DASHBOARD_POM"
alias run_dashboard="mvn jetty:run -f $DASHBOARD_POM"

alias build_api="mvn clean install -f $API_POM"
alias run_api="mvn jetty:run -f $API_POM"

alias build_dal="mvn clean install -f $DAL_POM"

alias build_common="mvn clean install -f $COMMON_POM"
alias build_domain="mvn clean install -f $DOMAIN_POM"
alias generate_docs="mvn clean install -P apidoc -f $API_POM"

alias build_scaffold="mvn clean install -f $SCAFFOLD_POM"

hash -d sli=~/Documents/workspace/SLI/sli

function cisli() {
	echo "build domain";
    build_domain;
    echo "build common";
	build_common;
    echo "build dal"
    build_dal
    echo "build api";
	build_api;
}

function docs() {
	echo "build scaffold"
	build_scaffold
	echo "generate docs"
	generate_docs
}

function deploy_api() {

    echo "removing old api.war and api/ in webapps"
    rm /Library/Tomcat/webapps/api.war
    rm -rf /Library/Tomcat/webapps/apps/api

    echo "moving api.war into webapps"
    cp ~/Documents/workspace/SLI/sli/api/target/api.war /Library/Tomcat/webapps/

}

function shutdown() {
    /Library/Tomcat/bin/shutdown.sh
}

function startup() {
    /Library/Tomcat/bin/startup.sh
}
export CATALINA_OPTS="-Dsli.env=local  -Dsli.encryption.keyStore=/Users/jstokes/Documents/workspace/SLI/sli/data-access/dal/keyStore/localKeyStore.jks -Dsli.encryption.properties=/Users/jstokes/Documents/workspace/SLI/sli/data-access/dal/keyStore/localEncryption.properties"

## END SLI_WORKSPACE
