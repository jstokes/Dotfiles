#SLI stuff
SLI_WORKSPACE="~/Documents/workspace/SLI/sli"
DASHBOARD_POM="$SLI_WORKSPACE/dashboard/pom.xml"
API_POM="$SLI_WORKSPACE/api/pom.xml"
SCAFFOLD_POM="$SLI_WORKSPACE/scaffold/pom.xml"
COMMON_POM="$SLI_WORKSPACE/common/pom.xml"
DOMAIN_POM="$SLI_WORKSPACE/common/domain/pom.xml"

alias build_dashboard="mvn clean install -P test -f $DASHBOARD_POM"
alias run_dashboard="mvn jetty:run -P test -f $DASHBOARD_POM"

alias build_api="mvn clean install -DskipTests -f $API_POM"
alias run_api="mvn jetty:run -DskipTests -f $API_POM"

alias build_common="mvn clean install -DskipTests -f $COMMON_POM"
alias build_domain="mvn clean install -Dskiptests -f $DOMAIN_POM"
alias generate_docs="mvn clean install -DskipTests -P apidoc -f $API_POM"

alias build_scaffold="mvn clean install -DskipTests -f $SCAFFOLD_POM"

hash -d sli=~/Documents/workspace/SLI/sli

function cisli() {
	echo "build domain";
    build_domain;
    echo "build common";
	build_common;
	echo "build api";
	build_api;
}

function docs() {
	echo "build scaffold"
	build_scaffold
	echo "generate docs"
	generate_docs
}
## END SLI_WORKSPACE
